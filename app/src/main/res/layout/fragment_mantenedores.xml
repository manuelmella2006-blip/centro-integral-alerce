<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/verde_santo_tomas">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- Icono Mantenedores -->
                <FrameLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_icon_circle"
                    android:backgroundTint="@color/verde_claro"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mantenedores"
                        app:tint="@color/verde_santo_tomas" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mantenedores"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestión de datos del sistema"
                    android:textSize="14sp"
                    android:textColor="@color/verde_claro"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Gestión de Lugares -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GESTIÓN DE LUGARES"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/gris_medio"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp" />

        <!-- Card Crear Lugar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/blanco">

            <LinearLayout
                android:id="@+id/card_crear_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_circle"
                    android:backgroundTint="@color/verde_claro">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_dialog_map"
                        app:tint="@color/verde_santo_tomas" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crear Lugar"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gris_oscuro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregar ubicaciones para actividades"
                        android:textSize="13sp"
                        android:textColor="@color/gris_medio"
                        android:layout_marginTop="4dp"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    android:rotation="180"
                    app:tint="@color/gris_medio" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Gestión de Actividades -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GESTIÓN DE ACTIVIDADES"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/gris_medio"
            android:letterSpacing="0.1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/blanco">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Card Tipos de Actividad -->
                <LinearLayout
                    android:id="@+id/card_tipos_actividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_icon_circle"
                        android:backgroundTint="@color/verde_claro">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_list"
                            app:tint="@color/tipo_taller" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipos de Actividad"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gris_oscuro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categorías y etiquetas de actividades"
                            android:textSize="13sp"
                            android:textColor="@color/gris_medio"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:rotation="180"
                        app:tint="@color/gris_medio" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="92dp"
                    android:background="@color/gris_borde" />

                <!-- Card Oferentes -->
                <LinearLayout
                    android:id="@+id/card_oferentes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_icon_circle"
                        android:backgroundTint="@color/verde_claro">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="@color/violeta_academico" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oferentes"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gris_oscuro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Responsables de actividades"
                            android:textSize="13sp"
                            android:textColor="@color/gris_medio"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:rotation="180"
                        app:tint="@color/gris_medio" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Gestión de Proyectos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GESTIÓN DE PROYECTOS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/gris_medio"
            android:letterSpacing="0.1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/blanco">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Card Socios Comunitarios -->
                <LinearLayout
                    android:id="@+id/card_socios_comunitarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_icon_circle"
                        android:backgroundTint="@color/verde_claro">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_share"
                            app:tint="@color/cian_info" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Socios Comunitarios"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gris_oscuro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organizaciones asociadas y beneficiarios"
                            android:textSize="13sp"
                            android:textColor="@color/gris_medio"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:rotation="180"
                        app:tint="@color/gris_medio" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="92dp"
                    android:background="@color/gris_borde" />

                <!-- Card Proyectos -->
                <LinearLayout
                    android:id="@+id/card_proyectos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_icon_circle"
                        android:backgroundTint="@color/verde_claro">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_file"
                            app:tint="@color/naranja_diagnostico" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proyectos"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/gris_oscuro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iniciativas y programas del centro"
                            android:textSize="13sp"
                            android:textColor="@color/gris_medio"
                            android:layout_marginTop="4dp"
                            android:lineSpacingMultiplier="1.2" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:rotation="180"
                        app:tint="@color/gris_medio" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card Informativo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/amarillo_advertencia">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="@color/blanco" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Los mantenedores solo están disponibles para administradores del sistema"
                    android:textSize="12sp"
                    android:textColor="@color/blanco"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Footer con logo Santo Tomás -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_logo_santo_tomas_verde_2"
                android:alpha="0.3"
                android:contentDescription="@string/logo_santo_tomas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad Santo Tomás"
                android:textSize="10sp"
                android:textColor="@color/gris_medio"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>