<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@color/blanco">

    <!-- Columna con la hora -->
    <TextView
        android:id="@+id/tvHour"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="4dp"
        android:text="08:00"
        android:textColor="@color/verdeSantoTomas"
        android:textStyle="bold"
        android:textSize="12sp"
        android:background="@drawable/border_hour" />

    <!-- Lunes -->
    <LinearLayout
        android:id="@+id/cellLun"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border_cell" />

    <!-- Martes -->
    <LinearLayout
        android:id="@+id/cellMar"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_cell"
        android:padding="2dp" />

    <!-- Miércoles -->
    <LinearLayout
        android:id="@+id/cellMie"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_cell"
        android:padding="2dp" />

    <!-- Jueves -->
    <LinearLayout
        android:id="@+id/cellJue"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_cell"
        android:padding="2dp" />

    <!-- Viernes -->
    <LinearLayout
        android:id="@+id/cellVie"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_cell"
        android:padding="2dp" />

    <!-- Sábado -->
    <LinearLayout
        android:id="@+id/cellSab"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_cell"
        android:padding="2dp" />

    <!-- Domingo -->
    <LinearLayout
        android:id="@+id/cellDom"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/border_cell"
        android:padding="2dp" />

</LinearLayout>