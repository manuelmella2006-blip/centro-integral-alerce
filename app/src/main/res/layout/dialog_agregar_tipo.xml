<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/blanco">

    <!-- Header con color verde -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde_santo_tomas"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_icon_circle"
            android:backgroundTint="@color/verde_secundario"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_list"
                app:tint="@color/blanco" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Tipo de Actividad"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agrega una categoría para organizar actividades"
            android:textColor="@color/verde_claro"
            android:textSize="13sp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Campo Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_list"
            app:startIconTint="@color/verde_santo_tomas"
            app:helperText="Ejemplo: Capacitación, Taller, Charla"
            app:helperTextTextColor="@color/gris_medio"
            app:boxStrokeColor="@color/verde_santo_tomas"
            app:hintTextColor="@color/verde_santo_tomas"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del tipo"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/gris_oscuro" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mensaje info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/verde_claro">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_view"
                    app:tint="@color/verde_santo_tomas"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Los tipos creados estarán disponibles al crear nuevas actividades"
                    android:textColor="@color/gris_oscuro"
                    android:textSize="12sp"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelar"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancelar"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:strokeColor="@color/gris_medio"
                app:strokeWidth="2dp"
                android:textColor="@color/gris_medio" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardar"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Guardar"
                android:textSize="15sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_check"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/verde_santo_tomas" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>