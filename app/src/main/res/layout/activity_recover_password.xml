<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro">

    <!-- AppBar con Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/verde_santo_tomas"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/verde_santo_tomas"
            app:title="Recuperar Contraseña"
            app:titleTextColor="@color/blanco"
            app:navigationIcon="@drawable/ic_chevron_left"
            app:navigationIconTint="@color/blanco" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido Scrolleable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Ícono decorativo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@android:drawable/ic_lock_lock"
                android:padding="24dp"
                android:background="@drawable/bg_icon_circle"
                android:backgroundTint="@color/verde_claro"
                app:tint="@color/verde_santo_tomas"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp" />

            <!-- Card Principal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/blanco">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Título -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¿Olvidaste tu contraseña?"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/verde_santo_tomas"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtítulo instructivo -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ingresa tu correo electrónico y te enviaremos instrucciones para restablecer tu contraseña"
                        android:textSize="14sp"
                        android:textColor="@color/gris_medio"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="32dp" />

                    <!-- Campo Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="@color/verde_santo_tomas"
                        app:helperText="Ejemplo: usuario@correo.com"
                        app:helperTextTextColor="@color/gris_medio"
                        app:boxStrokeColor="@color/verde_santo_tomas"
                        app:hintTextColor="@color/verde_santo_tomas"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmailRecover"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Correo electrónico"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:textColor="@color/gris_oscuro"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Enviar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendRecovery"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Enviar Email de Recuperación"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:icon="@android:drawable/ic_dialog_email"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconSize="24dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/verde_santo_tomas"
                        android:elevation="4dp"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card de Información Adicional -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#E3F2FD">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="@color/cian_info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Revisa tu bandeja de entrada y spam. El correo puede tardar unos minutos en llegar."
                        android:textSize="13sp"
                        android:textColor="@color/gris_oscuro"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Volver al login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolverLogin"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Volver al inicio de sesión"
                android:textSize="14sp"
                android:textColor="@color/verde_santo_tomas"
                app:icon="@drawable/ic_chevron_left"
                app:iconGravity="textStart"
                app:iconTint="@color/verde_santo_tomas" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>