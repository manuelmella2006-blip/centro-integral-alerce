<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    android:fillViewport="true"
    tools:context=".ui.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Card contenedor del formulario -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/blanco"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Logo/Icono (Opcional - puedes agregar un ImageView aquí) -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_dialog_info"
                    android:tint="@color/verdeSantoTomas"
                    android:layout_marginBottom="16dp" />

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Centro Integral Alerce"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeSantoTomas"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Universidad Santo Tomás"
                    android:textSize="14sp"
                    android:textColor="@color/grisOscuro"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iniciar Sesión"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/grisOscuro"
                    android:gravity="center"
                    android:layout_marginBottom="32dp" />

                <!-- Campo Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="@color/verdeSantoTomas"
                    app:helperText="Correo registrado"
                    app:helperTextTextColor="@color/grisOscuro"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                    app:startIconTint="@color/verdeSantoTomas"
                    app:endIconMode="password_toggle"
                    app:helperText="Mínimo 6 caracteres"
                    app:helperTextTextColor="@color/grisOscuro"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Link Recuperar Contraseña (arriba de botones) -->
                <TextView
                    android:id="@+id/tvRecoverPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="¿Olvidaste tu contraseña?"
                    android:textColor="@color/verdeSantoTomas"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp" />

                <!-- Botón Login -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Iniciar Sesión"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@android:drawable/ic_media_play"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/verdeSantoTomas"
                    android:layout_marginBottom="12dp"
                    android:onClick="onLoginClick"
                    style="@style/Widget.Material3.Button" />

                <!-- Botón Invitado -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/guestLoginButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Continuar como Invitado"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/verdeSantoTomas"
                    app:strokeWidth="2dp"
                    android:textColor="@color/verdeSantoTomas"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Versión de la app (Footer) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versión 1.0.0"
            android:textSize="12sp"
            android:textColor="@color/grisMedio"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
