<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre de la actividad -->
        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Actividad"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/negro" />

        <!-- Tipo de actividad -->
        <TextView
            android:id="@+id/tv_activity_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tipo de Actividad"
            android:textSize="14sp"
            android:textColor="@color/grisMedio" />

        <!-- Fecha y Hora -->
        <TextView
            android:id="@+id/tv_activity_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Fecha y Hora"
            android:textSize="14sp"
            android:textColor="@color/grisMedio" />

        <!-- Lugar -->
        <TextView
            android:id="@+id/tv_activity_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Lugar"
            android:textSize="14sp"
            android:textColor="@color/grisMedio" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tv_activity_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/bg_status_active"
            android:text="Estado"
            android:textSize="12sp"
            android:textColor="@color/blanco"
            android:textStyle="bold" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>