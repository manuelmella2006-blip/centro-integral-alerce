<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro">

    <!-- SwipeRefreshLayout para Pull to Refresh -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Contenedor principal -->
        <LinearLayout
            android:id="@+id/layout_calendar_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- ========================================= -->
            <!-- HEADER CON NAVEGACIN DE SEMANA -->
            <!-- ========================================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/blanco">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_header_gradient"
                    android:padding="20dp">

                    <!-- T铆tulo y subt铆tulo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Calendario Semanal"
                            android:textSize="20sp"
                            android:textColor="@color/verde_santo_tomas"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.02" />

                        <TextView
                            android:id="@+id/tv_subtitle_mes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Octubre 2024"
                            android:textSize="13sp"
                            android:textColor="@color/gris_medio"
                            android:layout_marginTop="2dp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <!-- Fila de navegaci贸n -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_week_selector">

                        <!-- Bot贸n semana anterior -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_prev_week"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:icon="@drawable/ic_chevron_left"
                            app:iconTint="@color/blanco"
                            app:iconPadding="0dp"
                            app:iconGravity="textStart"
                            app:iconSize="32dp"
                            app:backgroundTint="@color/verde_santo_tomas"
                            app:cornerRadius="28dp"
                            app:elevation="4dp"
                            app:rippleColor="@color/verde_claro"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:contentDescription="Semana anterior" />

                        <!-- Texto de semana actual -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/tv_current_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14-20 OCTUBRE"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true"
                                android:textColor="@color/verde_santo_tomas"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                tools:text="14-20 OCTUBRE" />

                            <TextView
                                android:id="@+id/tv_current_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2024"
                                android:textSize="12sp"
                                android:textColor="@color/gris_medio"
                                android:layout_marginTop="2dp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <!-- Bot贸n semana siguiente -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_next_week"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:icon="@drawable/ic_chevron_right"
                            app:iconTint="@color/blanco"
                            app:iconPadding="0dp"
                            app:iconGravity="textStart"
                            app:iconSize="32dp"
                            app:backgroundTint="@color/verde_santo_tomas"
                            app:cornerRadius="28dp"
                            app:elevation="4dp"
                            app:rippleColor="@color/verde_claro"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:contentDescription="Semana siguiente" />

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ========================================= -->
            <!-- INDICADOR DE CARGA -->
            <!-- ========================================= -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:indeterminateTint="@color/verde_santo_tomas"
                android:visibility="gone" />

            <!-- ========================================= -->
            <!-- VIEWPAGER2 - CALENDARIO -->
            <!-- ========================================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/blanco">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:overScrollMode="never" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- ========================================= -->
    <!-- EMPTY STATE (Sin actividades) -->
    <!-- ========================================= -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_empty_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="32dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@color/blanco"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp">

            <!-- Icono grande -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="60dp"
                app:cardBackgroundColor="@color/verde_claro">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="@string/icono_calendario_vacio"
                    app:tint="@color/verde_santo_tomas" />

            </com.google.android.material.card.MaterialCardView>

            <!-- T铆tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/sin_citas_semana"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gris_oscuro"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <!-- Descripci贸n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/comienza_organizando"
                android:textSize="15sp"
                android:textColor="@color/gris_medio"
                android:gravity="center"
                android:lineSpacingExtra="4dp" />

            <!-- Bot贸n de acci贸n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create_first_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/crear_primera_actividad"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                app:icon="@drawable/ic_add"
                app:iconSize="20dp"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/verde_santo_tomas"
                android:textColor="@color/blanco"
                app:elevation="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ========================================= -->
    <!-- FLOATING ACTION BUTTON -->
    <!-- ========================================= -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_new_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="Nueva Actividad"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:textSize="15sp"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/blanco"
        app:iconSize="24dp"
        app:backgroundTint="@color/verde_santo_tomas"
        app:elevation="8dp"
        app:borderWidth="0dp"
        app:cornerRadius="16dp"
        app:rippleColor="@color/verde_claro"
        android:contentDescription="Nueva actividad" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>