<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="14dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/tv_actividad_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre actividad"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222" />

        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ• 10:00"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Gimnasio"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="#444444" />

        <TextView
            android:id="@+id/tv_estado_temporal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoy - En 2 horas"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="6dp"
            android:textColor="#777777" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_estado"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOY"
            android:layout_marginTop="8dp"
            app:chipBackgroundColor="@android:color/holo_green_light"
            app:chipCornerRadius="12dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <View
                android:id="@+id/view_estado_indicator"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_green_dark" />

            <ImageView
                android:id="@+id/iv_urgencia"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:src="@android:drawable/ic_dialog_alert"
                app:tint="@android:color/holo_red_dark"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
