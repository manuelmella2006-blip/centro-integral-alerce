<?xml version="1.0" encoding="utf-8"?>
<!-- activity_editar_usuario.xml -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Card contenedor del formulario -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/blanco"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Usuario"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeSantoTomas"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modifica los datos del usuario"
                    android:textSize="14sp"
                    android:textColor="@color/grisOscuro"
                    android:gravity="center"
                    android:layout_marginBottom="24dp" />

                <!-- Campo Nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/verdeSantoTomas"
                    app:helperText="Nombre completo"
                    app:helperTextTextColor="@color/grisOscuro"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLines="1"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo Email (solo lectura) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="@color/verdeSantoTomas"
                    app:helperText="Email no editable"
                    app:helperTextTextColor="@color/grisOscuro"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo electrÃ³nico"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:enabled="false"
                        android:focusable="false" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Selector de Rol -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/grisOscuro"
                    app:cardBackgroundColor="@color/blanco">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rol de Usuario"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/verdeSantoTomas"
                            android:layout_marginBottom="8dp" />

                        <Spinner
                            android:id="@+id/spinnerRol"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:entries="@array/roles_array"
                            android:spinnerMode="dropdown"
                            android:background="@android:color/transparent"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Botones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelar"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/gris_medio"
                        app:strokeWidth="2dp"
                        android:textColor="@color/gris_medio" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Guardar Cambios"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/verdeSantoTomas"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>