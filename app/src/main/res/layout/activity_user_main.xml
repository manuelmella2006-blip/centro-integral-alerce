<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_claro"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card con Bienvenida -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/verde_santo_tomas">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Logo y Título -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_logo_centro_integral_alerce"
                        android:contentDescription="@string/logo_centro_alerce" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¡Bienvenido!"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/blanco" />

                        <TextView
                            android:id="@+id/tv_user_name_welcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usuario"
                            android:textSize="16sp"
                            android:textColor="@color/verde_claro"
                            android:layout_marginTop="2dp"
                            tools:text="Carlos Pérez" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centro Integral Alerce"
                    android:textSize="14sp"
                    android:textColor="@color/verde_claro"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Accesos Rápidos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCESOS RÁPIDOS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/gris_medio"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp" />

        <!-- Card Ver Calendario -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/blanco">

            <LinearLayout
                android:id="@+id/btnVerCalendario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_circle"
                    android:backgroundTint="@color/verde_claro">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/verde_santo_tomas" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver Calendario"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gris_oscuro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consulta actividades programadas por fecha"
                        android:textSize="13sp"
                        android:textColor="@color/gris_medio"
                        android:layout_marginTop="4dp"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    android:rotation="180"
                    app:tint="@color/gris_medio" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card Ver Actividades -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/blanco">

            <LinearLayout
                android:id="@+id/btnVerActividades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_icon_circle"
                    android:backgroundTint="@color/verde_claro">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_list"
                        app:tint="@color/verde_secundario" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver Actividades"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gris_oscuro" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explora el listado completo de actividades disponibles"
                        android:textSize="13sp"
                        android:textColor="@color/gris_medio"
                        android:layout_marginTop="4dp"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    android:rotation="180"
                    app:tint="@color/gris_medio" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Próximas Actividades (Preview) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRÓXIMAS ACTIVIDADES"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/gris_medio"
            android:letterSpacing="0.1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="4dp" />

        <!-- Card Resumen Actividades -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/blanco">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/verde_santo_tomas" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Esta Semana"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gris_oscuro" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_count_activities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 actividades"
                        app:chipBackgroundColor="@color/verde_claro"
                        app:chipStrokeWidth="0dp"
                        android:textColor="@color/verde_santo_tomas"
                        style="@style/Widget.Material3.Chip.Assist" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gris_borde"
                    android:layout_marginBottom="12dp" />

                <!-- Item Actividad Preview 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="40dp"
                        android:background="@color/tipo_capacitacion"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taller de Liderazgo"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/gris_oscuro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hoy • 14:00 - 16:00"
                            android:textSize="12sp"
                            android:textColor="@color/gris_medio"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Item Actividad Preview 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="40dp"
                        android:background="@color/tipo_taller"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charla Comunitaria"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/gris_oscuro" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mañana • 10:00 - 12:00"
                            android:textSize="12sp"
                            android:textColor="@color/gris_medio"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Ver más -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVerMasActividades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ver todas las actividades"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_list"
                    app:iconGravity="textStart"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/verde_santo_tomas"
                    app:strokeWidth="1dp"
                    android:textColor="@color/verde_santo_tomas"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card Info/Tips -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/verde_claro">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="@color/verde_santo_tomas" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Recuerda revisar regularmente el calendario para no perderte ninguna actividad"
                    android:textSize="12sp"
                    android:textColor="@color/verde_santo_tomas"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Footer con logo Santo Tomás -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_logo_santo_tomas_verde_2"
                android:alpha="0.3"
                android:contentDescription="@string/logo_santo_tomas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universidad Santo Tomás"
                android:textSize="10sp"
                android:textColor="@color/gris_medio"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>