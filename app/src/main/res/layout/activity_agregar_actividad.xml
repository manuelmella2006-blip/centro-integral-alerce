<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etNombreActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la actividad"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spPeriodicidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etCupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cupo"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etDiasAvisoPrevio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Días aviso previo"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spTipoActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spOferente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spSocioComunitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lugar de la actividad"
            android:layout_marginBottom="8dp"/>

        <!-- Fecha y hora inicio -->
        <LinearLayout
            android:id="@+id/llFechaHoraInicio"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etFechaInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Fecha inicio (dd/mm/aaaa)"
                android:focusable="false"/>

            <EditText
                android:id="@+id/etHoraInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hora inicio (HH:mm)"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Fecha y hora término -->
        <LinearLayout
            android:id="@+id/llFechaHoraTermino"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etFechaTermino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Fecha término (dd/mm/aaaa)"
                android:focusable="false"/>

            <EditText
                android:id="@+id/etHoraTermino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Hora término (HH:mm)"
                android:focusable="false"/>
        </LinearLayout>

        <!-- Selección de días de la semana para periódicas -->
        <LinearLayout
            android:id="@+id/llDiasSemana"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:weightSum="7">

            <CheckBox
                android:id="@+id/cbLunes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lun"/>
            <CheckBox
                android:id="@+id/cbMartes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mar"/>
            <CheckBox
                android:id="@+id/cbMiercoles"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mié"/>
            <CheckBox
                android:id="@+id/cbJueves"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jue"/>
            <CheckBox
                android:id="@+id/cbViernes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vie"/>
            <CheckBox
                android:id="@+id/cbSabado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sáb"/>
            <CheckBox
                android:id="@+id/cbDomingo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dom"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnGuardarActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar actividad"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
