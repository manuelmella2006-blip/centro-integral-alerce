<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/blanco"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icono circular -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_icon_circle"
            android:backgroundTint="@color/verde_claro">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_file"
                app:tint="@color/verde_santo_tomas" />

        </FrameLayout>

        <!-- Información del proyecto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proyecto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gris_oscuro"/>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del proyecto"
                android:textSize="13sp"
                android:textColor="@color/gris_medio"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Botón Editar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@color/verde_santo_tomas"
                app:iconSize="20dp"
                android:contentDescription="Editar"
                app:backgroundTint="@color/verde_claro"
                android:layout_marginEnd="8dp" />

            <!-- Botón Eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/rojo_error"
                app:iconSize="20dp"
                android:contentDescription="Eliminar"
                app:backgroundTint="#FFEBEE" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>