<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2D6A3E"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤"
            android:textSize="48sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Socio Comunitario"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agrega un nuevo socio comunitario para las actividades"
            android:textColor="#E0FFFFFF"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Campo Nombre -->
        <EditText
            android:id="@+id/etNombreSocio"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nombre del socio comunitario"
            android:background="@drawable/input_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp"
            android:inputType="textCapWords"
            android:maxLines="1"/>

        <!-- Campo Beneficiarios -->
        <EditText
            android:id="@+id/etBeneficiarios"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Beneficiarios"
            android:background="@drawable/input_background"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="16sp"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:layout_marginTop="12dp"/>

        <!-- Mensaje info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#E8F5E9"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸"
                android:textSize="16sp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Los socios comunitarios creados estarÃ¡n disponibles para asignar a las actividades"
                android:textColor="#1B4D2A"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Cancelar"
                android:textColor="#2D6A3E"
                android:background="@drawable/button_outline"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="âœ“ Guardar"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_filled"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>