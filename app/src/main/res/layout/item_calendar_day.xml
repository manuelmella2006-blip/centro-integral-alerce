<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header del día -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/verde_claro">

            <TextView
                android:id="@+id/tv_day_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lunes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/verde_santo_tomas"
                tools:text="Lunes" />

            <TextView
                android:id="@+id/tv_day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14 Oct"
                android:textSize="14sp"
                android:textColor="@color/gris_oscuro"
                tools:text="14 Oct" />

        </LinearLayout>

        <!-- RecyclerView de actividades del día -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_day_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_activity_card"
            tools:itemCount="3" />

        <!-- Mensaje si no hay actividades -->
        <TextView
            android:id="@+id/tv_no_activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="No hay actividades"
            android:textSize="14sp"
            android:textColor="@color/gris_medio"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>