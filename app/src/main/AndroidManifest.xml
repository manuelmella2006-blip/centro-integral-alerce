<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.centrointegralalerce">

    <!-- ðŸ”¹ Permisos necesarios -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- Android 13+ -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CentroIntegralAlerce"
        android:enableOnBackInvokedCallback="true">

        <!-- ðŸ”¹ Activities existentes -->
        <activity android:name=".ui.mantenedores.TiposActividadActivity" />
        <activity
            android:name=".ui.mantenedores.OferentesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.mantenedores.SociosComunitariosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.mantenedores.ProyectosActivity"
            android:exported="false" />

        <!-- ðŸ†• Agregada: LugaresActivity -->
        <activity
            android:name=".ui.mantenedores.LugaresActivity"
            android:exported="false"
            android:theme="@style/Theme.CentroIntegralAlerce" />

        <activity android:name=".ui.RecoverPasswordActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity
            android:name=".ui.DetalleActividadActivity"
            android:exported="true" />
        <activity
            android:name=".ui.AgregarActividadActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CrearLugarActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AdjuntarComunicacionActivity"
            android:parentActivityName=".ui.DetalleActividadActivity" />
        <activity
            android:name=".ui.ModificarActividadActivity"
            android:exported="false"
            android:theme="@style/Theme.CentroIntegralAlerce" />

        <!-- ðŸ†• SIN ActionBar -->
        <activity
            android:name=".ui.ReagendarActividadActivity"
            android:exported="false"
            android:theme="@style/Theme.CentroIntegralAlerce" />

        <!-- ðŸ†• NUEVA ACTIVIDAD -->
        <activity
            android:name=".ui.ReagendarCitaActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.CentroIntegralAlerce" />

        <activity
            android:name=".ui.GestionUsuariosActivity"
            android:parentActivityName=".ui.MainActivity" />

        <activity
            android:name=".ui.EditarUsuarioActivity"
            android:parentActivityName=".ui.GestionUsuariosActivity" />

        <activity
            android:name=".ui.CancelarActividadActivity"
            android:exported="false"
            android:theme="@style/Theme.CentroIntegralAlerce" />

        <!-- ðŸ”¹ Activity principal -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ Firebase Messaging -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- ðŸ”¹ Notificaciones -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/verde_santo_tomas" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />
    </application>
</manifest>
